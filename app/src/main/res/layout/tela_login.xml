<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imagem_login">


    <TextView
        android:id="@+id/MensagemInicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="@string/initial_message"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/campo_usuario"
        android:layout_width="299dp"
        android:layout_height="30sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="160dp"
        android:background="@drawable/bg_buttons"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="UsuÃ¡rio"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MensagemInicio" />

    <EditText
        android:id="@+id/campo_senha"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/campo_usuario"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:background="@drawable/bg_buttons"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/campo_usuario" />

    <Button
        android:id="@+id/login_botao"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/campo_senha"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:stateListAnimator="@null"
        android:text="Entrar"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="@drawable/bg_buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/campo_senha" />

    <Button
        android:id="@+id/login_cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/campo_senha"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="96dp"
        android:stateListAnimator="@null"
        android:text="Cadastrar"
        android:textAlignment="center"
        android:background="@drawable/bg_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="4dp"
        android:buttonTint="#FFFFFF"
        android:text="Lembrar login"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/login_cadastro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_botao"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/progress_login"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/campo_senha"
        android:layout_alignStart="@+id/login_botao"
        android:layout_alignEnd="@+id/login_botao"
        android:layout_alignBottom="@+id/login_botao"
        app:layout_constraintBottom_toBottomOf="@+id/login_botao"
        app:layout_constraintEnd_toEndOf="@+id/login_botao"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/login_botao"
        app:layout_constraintTop_toBottomOf="@+id/campo_senha"
        app:layout_constraintVertical_bias="0.98" />

</androidx.constraintlayout.widget.ConstraintLayout>